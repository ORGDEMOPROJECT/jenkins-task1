#!/usr/bin/env groovy
properties([[$class: 'GithubProjectProperty', displayName: '', 
             projectUrlStr: 'https://github.com/ORGDEMOPROJECT/jenkins-task1/'], 
            parameters([booleanParam(defaultValue: true, description: '', name: 'ENV '), 
                        choice(choices: [''], description: '', name: ''), 
                        string(defaultValue: 'master ', description: '', name: 'branch')])])
pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'ls -l'
                dir ('foo') {
                 writeFile file:'dummy', text:''
                 }
                }
               }
                stage('Test') {
                 steps {
                  sh 'ls -l'
                  }
                 }
                 stage('Deploy') {
                  steps {
                       echo 'Hello Padmini2'
                       }
                      }
                     }
                    }
