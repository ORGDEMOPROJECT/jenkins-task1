#!/usr/bin/env groovy
properties([parameters([booleanParam(defaultValue: false, description: '', name: 'rebuild-task '), 
                                    choice(choices: ['integration '], description: '', 
                                    name: 'environment '), string(defaultValue: '', description: '', name: 'branch ')])])
pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'ls -l'
                dir ('foo') {
                 writeFile file:'dummy', text:''
                 }
                }
               }
                stage('Test') {
                 steps {
                  sh 'ls -l'
                  }
                 }
                 stage('Deploy') {
                  steps {
                       echo 'Hello Padmini2'
                       }
                      }
                     }
                    }
