#!/usr/bin/env groovy
properties([[$class: 'GithubProjectProperty', displayName: '', projectUrlStr: 'https://github.com/ORGDEMOPROJECT/'], 
            parameters([booleanParam(defaultValue: true, description: 'should be false', name: 'param1')])])
pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh "echo paddu is ${params.param1}"
                dir ('foo') {
                 writeFile file:'dummy', text:''
                 }
                }
               }
                stage('Test') {
                 steps {
                  sh 'ls -l'
                  }
                 }
                 stage('Deploy') {
                  steps {
                       echo "paddu"
                       }
                      }
                     }
                    }
